<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.budgetchecker.domain.user.UserMapper">

    <!-- tb_user 테이블 전체 컬럼 -->
    <sql id="userColumns">
        id
        , username
        , password
        , email
        , created_at
        , updated_at
        , delete_tn
        , nickname
    </sql>

    <insert id="save" parameterType="com.budgetchecker.domain.user.User" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO user (
        <include refid="userColumns" />
        ) VALUES (
        #{id}
        , #{username}
        , #{password}
        , #{email}
        , NOW()
        , NULL
        , 0
        , #{nickname}
        )
    </insert>

    <update id="userUpdate" parameterType="com.budgetchecker.domain.user.User">
        UPDATE user
        SET
        modified_date = NOW()
        , nickname = #{nickname}
        , password = #{password}
        WHERE
        id = #{id}
    </update>

    <select id="findById" resultType="com.budgetchecker.domain.user.User">
        SELECT
        <include refid="userColumns" />
        FROM
        user
        WHERE
        id = #{id}
    </select>

    <select id="findByUsername" resultType="com.budgetchecker.domain.user.User">
        SELECT
        <include refid="userColumns" />
        FROM
        user
        WHERE
        username = #{username}
    </select>

    <select id="existsByEmail" parameterType="com.budgetchecker.domain.user.User" resultType="java.lang.Boolean">
        SELECT
        IF(COUNT(*) = 1, 1, 0)
        FROM
        user
        WHERE
        email = #{value}
    </select>

    <select id="existsByNickname" parameterType="com.budgetchecker.domain.user.User" resultType="java.lang.Boolean">
        SELECT
        IF(COUNT(*) = 1, 1, 0)
        FROM
        user
        WHERE
        nickname = #{value}
    </select>

    <select id="existsByUsername" parameterType="com.budgetchecker.domain.user.User" resultType="java.lang.Boolean">
        SELECT
        IF(COUNT(*) = 1, 1, 0)
        FROM
        user
        WHERE
        username = #{value}
    </select>




</mapper>